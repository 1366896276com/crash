<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>release</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <!-- buildable -->
  <fileSets>
<!--
    <fileSet>
      <outputDirectory>maven</outputDirectory>
      <directory>.</directory>
      <includes>
        <include>pom.xml</include>
        <include>src/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>javadocs</outputDirectory>
      <directory>target/site/apidocs</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
-->
    <fileSet>
      <outputDirectory>.</outputDirectory>
      <directory>src/main/packaging</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>

  <!-- the war file -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>/deploy/core</outputDirectory>
      <outputFileNameMapping>crash.war</outputFileNameMapping>
      <includes>
        <include>org.crsh:crsh.shell.core:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/deploy/gatein</outputDirectory>
      <outputFileNameMapping>crash.war</outputFileNameMapping>
      <includes>
        <include>org.crsh:crsh.shell.jcr:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/javadoc</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>org.crsh:crsh.shell.core:jar:javadoc</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/src</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>org.crsh:crsh.shell.core:jar:sources</include>
        <include>org.crsh:crsh.shell.jcr:jar:sources</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/doc</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>org.crsh:crsh.doc:zip:html</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/doc</outputDirectory>
      <includes>
        <include>org.crsh:crsh.doc:pdf</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>