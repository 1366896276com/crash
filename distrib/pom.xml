<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>crsh.parent</artifactId>
    <groupId>org.crsh</groupId>
    <version>1.0.0-beta9</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.crsh</groupId>
  <artifactId>crsh.distrib</artifactId>
  <packaging>jar</packaging>
  <version>1.0.0-beta9</version>

  <name>CRaSH distrib</name>
  <description>The CRaSH distribution</description>

  <profiles>
      <profile>
        <id>release</id>
        <dependencies>
          <dependency>
            <groupId>org.crsh</groupId>
            <artifactId>crsh.core</artifactId>
            <type>war</type>
          </dependency>
          <dependency>
            <groupId>org.crsh</groupId>
            <artifactId>crsh.core</artifactId>
            <classifier>sources</classifier>
          </dependency>
          <dependency>
            <groupId>org.crsh</groupId>
            <artifactId>crsh.doc</artifactId>
          </dependency>
          <dependency>
            <groupId>org.crsh</groupId>
            <artifactId>crsh.core</artifactId>
            <classifier>javadoc</classifier>
          </dependency>
        </dependencies>
        <build>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-assembly-plugin</artifactId>
              <version>2.1</version>
              <configuration>
                <finalName>crsh-${project.version}</finalName>
                <appendAssemblyId>false</appendAssemblyId>
                <descriptors>
                  <descriptor>src/main/assembly/packaging.xml</descriptor>
                </descriptors>
              </configuration>
              <executions>
                <execution>
                  <id>make-assembly</id>
                  <phase>package</phase>
                  <goals>
                    <goal>single</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </build>
      </profile>
  </profiles>

</project>